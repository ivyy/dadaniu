# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET           /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)


# Users Management

GET           /usermgt             controllers.UserMgt.mainPage

GET           /users               controllers.UserMgt.usersList

POST          /users/paging        controllers.UserMgt.usersPagingList

POST          /users               controllers.UserMgt.addUser

DELETE        /users/:id           controllers.UserMgt.deleteUser(id:Long)

PUT           /users/:id           controllers.UserMgt.updateUser(id:Long)


